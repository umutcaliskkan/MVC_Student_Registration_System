@model OgrenciKayitSistemiMvc.Models.EntityFramework.TBLOGRENCILER
@{
    ViewBag.Title = "YeniOgrenci";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" class="form-group">
    @*controllerdaki post mothodu kullanıldı*@
    <div>
        <label>Öğrenci Adı</label>
        <input type="text" class="form-control" name="OGRAD" /> @*textbox oluşturuldu ve Tablodaki OGRAD name a yazıldı*@
    </div>
    <div style="margin-top:10px">
        <label>Öğrenci Soyadı</label>
        <input type="text" class="form-control" name="OGRSOYAD" /> @*textbox oluşturuldu ve Tablodaki OGRSOYAD name a yazıldı*@
    </div>
    <div style="margin-top:10px">
        <label>Öğrenci Fotoğraf</label>
        <input type="text" class="form-control" name="OGRFOTO" /> @*textbox oluşturuldu ve Tablodaki OGRFOTO name a yazıldı*@
    </div>
    <div style="margin-top:10px">
        <label>Öğrenci Cinsiyet</label>
        <input type="text" class="form-control" name="OGRCINSIYET" /> @*textbox oluşturuldu ve Tablodaki OGRCINSIYET name a yazıldı*@
    </div>
    <div style="margin-top:10px">
        <label>Öğrenci Kulüp</label>
      @Html.DropDownListFor(m=>m.TBLKULUPLER.KULUPID,(List<SelectListItem>)ViewBag.dgr,new { @class="form-control"})
    </div>


    <div style="margin-top:10px">
        <button class="btn btn-primary">Öğrenci Ekle</button>
    </div>
</form>

